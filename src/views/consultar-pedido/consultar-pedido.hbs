<div class="wrapper-total animate__animated animate__zoomInDown">
  <h1 class="title-table">Consultar Pedido</h1>
  <div style="background-color: transparent; width: 70%;">
    <ul class="nav nav-pills mb-3" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" href="#tab-table1" data-toggle="tab">Pedidos Pendientes</a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane tab-pane fade show active" id="tab-table1">
        <table id="myTable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>#</th>
              <th>Fecha</th>
              <th>Cliente</th>
              <th>DNI</th>
              <th>Distrito</th>
              <th>Direccion</th>
              <th>Monto Total</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each venta_delivery}}
            <tr>
              <td scope="row">{{index @index}}</td>
              <td>{{formatdaytime fecha_venta}}</td>
              <td>{{nombre}} {{apellido}}</td>
              <td>{{dni}}</td>
              <td>{{distrito}}</td>
              <td>{{direccion}}</td>
              <td>{{money total}}</td>
              <td>
                <a href="consultar-pedido/checked/{{cod_ven}}">
                  <button id="btnCheck" name="btnCheck" type="button" class="btn btn-success btn-sm">
                    <i class="fa fa-check" aria-hidden="true"></i>
                  </button>
                </a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>