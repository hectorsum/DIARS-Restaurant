{{#if success}}
<div id="overlay" class="overlay">
  <div class="message">
    <div class="mx-auto">
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{success}}
        <button id="close-1" type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>
{{/if}}


{{#if failure}}
  <div id="overlay" class="overlay">
    <div class="message">
      <div class="mx-auto">
        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="max-width: 350px;">
          {{failure}}
          <button id="close-1" type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    </div>
  </div>
{{/if}}