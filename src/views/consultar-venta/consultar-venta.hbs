<div class="wrapper-total animate__animated animate__zoomInDown">
  <h1 class="title-table">Consultar Venta</h1>
  <div style="background-color: transparent; width: 50%;">
    <ul class="nav nav-pills mb-3" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" href="#tab-table1" data-toggle="tab">Ventas Restaurante</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#tab-table2" data-toggle="tab">Ventas Delivery</a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane tab-pane fade show active" id="tab-table1">
        <table id="myTable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>#</th>
              <th>Fecha</th>
              <th>Tipo Pago</th>
              <th>Tipo Comprobante</th>
              <th>Subtotal</th>
              <th>Total</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
          {{#each venta}}
            <tr>
              <td scope="row">{{index @index}}</td>
              <td>{{formatdaytime fecha_venta}}</td>
              <td>{{nombre_tipo_pago}}</td>
              <td>{{nombre_comprobante}}</td>
              <td>{{toFixed subtotal}}</td>
              <td>{{toFixed total}}</td>
              <td>
                <a target="_blank" href="/generar-cuenta/print/{{cod_ven}}">
                  <button type="button" class="btn btn-secondary btn-sm">
                    <i class="fas fa-print"></i>
                  </button>
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
        </table>
      </div>
      <div class="tab-pane fade" id="tab-table2">
        <table id="myTable2" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>#</th>
              <th>Fecha</th>
              <th>Tipo Pago</th>
              <th>Subtotal</th>
              <th>Total</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
          {{#each venta_delivery}}
            <tr>
              <td scope="row">{{index @index}}</td>
              <td>{{formatdaytime fecha_venta}}</td>
              <td>{{nombre_tipo_pago}}</td>
              <td>{{money subtotal}}</td>
              <td>{{money total}}</td>
              <td>
                <a target="_blank" href="/generar-cuenta/print/{{cod_ven}}">
                  <button type="button" class="btn btn-secondary btn-sm">
                    <i class="fas fa-print"></i>
                  </button>
                </a>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>