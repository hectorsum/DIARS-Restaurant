{{>login-navbar}}
<div class="login-wrapper">
  <div class="login-section">
    <div class="title">
      Cambiar Contrase√±a
    </div>
    <form action="/reset-password/{{code}}" method="POST">
      <div class="login-inputs">
        <div class="input-data">
          <input type="password" name="password" autocomplete="off" required>
          <div class="underline"></div>
          <label>New password</label>
        </div>
        <div class="input-data">
          <input type="password" name="confirm_password" autocomplete="off" required>
          <div class="underline"></div>
          <label>Confirm password</label>
        </div>
        <div class="text-olvido">
          {{!-- <a href="/recuperar">Enviar Codigo</a> --}}
          <button type="submit" class="btn btn-success btn-block">Cambiar password</button>
        </div>
      </div>
    </form>
  </div>
</div>