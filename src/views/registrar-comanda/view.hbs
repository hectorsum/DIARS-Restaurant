<div class="mantener-productos">
  <div class="popup-mantener">
      <div class="buscar-popup wrapper-total content-mantener-producto animate__animated animate__bounceInUp">
        <div class="form-body">
          <h1 class="mantener-heading-buscar">Mesa Num.{{venta.num_mesa}}</h1>
          <a href="/registrar-comanda" id="close-popup" onclick="popup_close_producto()"><i class="fas fa-times"></i></a>
          <div class="form-group col-md-10 m-0">
            <div class="form-group mb-2 table-responsive table-fixed table-fixed-2" id="carrito-comanda" style="width: 100%;">                              
              <table id="lista-carrito-comanda" class="table-active table-sm table-hover" style="table-layout: fixed; width: 100%;">
                  <thead class="thead-dark" style="color:white;">
                      <tr>
                        <th style="width: 50%; text-align: center;">Nombre</th>
                        <th style="width: 30%; text-align: center;">Imagen</th>
                        <th style="width: 20%; text-align: center;">Cantidad</th>
                      </tr>
                  </thead>
                  <tbody style="text-align: center;">
                    {{#each comanda}}
                      <tr>
                        <td>{{nombre}}</td>
                        <td><img src="/uploads/{{pathname}}" alt="No Image"></td>
                        <td>{{cantidad}}</td>
                      </tr>
                    {{/each}}
                  </tbody>
              </table>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>