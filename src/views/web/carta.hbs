  <div class="platos-section">
    <h2 class="title">Platos</h2>
    <div class="container card-group grid-group">
      {{#each segundo}}
      <div class="card grid-elem" style="width: 18rem; height: auto;">
        <img src="uploads/{{pathname}}" class="card-img-top" style="width: 286px;height: 160px;object-fit: cover;"
          alt="{{nombre}}">
        <div class="card-body text-left">
          <h5 class="card-title">{{nombre}}</h5>
          <p class="card-text">{{descripcion}}</p>
          <h3 class="cart-text price">{{money precio}}</h3>
          <a href="/carta/detalle-item/{{cod_carta}}" type="submit" class="btn btn-warning btn-block">Agregar al Carrito <i class="fas fa-cart-plus"></i></a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
